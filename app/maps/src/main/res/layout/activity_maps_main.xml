<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSimpleMap"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/btn_simple_map"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMapSupportFragment"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_support_map_fragment"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnSimpleMap"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMarkerLocationMapActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_marker_location_map"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnMapSupportFragment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnStyleAndCameraMapActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_style_and_camera_map"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnMarkerLocationMapActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLiteMapActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_lite_map"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnStyleAndCameraMapActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMapDrawShape"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_draw_shapes"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnLiteMapActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnMapOverlayActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_overlay_map"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnMapDrawShape"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnHeatMapActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_heatmap"
            android:gravity="center"
            android:onClick="btnClicked"
            app:layout_constraintTop_toBottomOf="@+id/btnMapOverlayActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/tv_enhanced_sdk"
            android:gravity="center"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnHeatMapActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>