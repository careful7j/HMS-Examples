<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        tools:context=".AnalyticsActivity">

        <TextView
            android:id="@+id/tv_banner_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_banner_ads"
            android:gravity="center"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_banner_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_banner_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_banner_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_native_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_native_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_banner_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_native_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_native_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_native_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_interstitial_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_interstitial_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_native_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_interstitial_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_interstitial_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_interstitial_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_rewarded_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_rewarded_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_interstitial_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_rewarded_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_rewarded_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_rewarded_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_splash_ads"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_splash_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_rewarded_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_splash_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_splash_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_splash_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


        <TextView
            android:id="@+id/tv_optional"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tv_optional"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_splash_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_instream_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_in_stream_ads"
            android:layout_marginTop="4dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_optional"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_instream_ads"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_in_stream_ads"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_instream_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_consent_non_personalised"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_consent_non_personalised"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_instream_ads"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_consent_non_personalised"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_consent_non_personalised"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_consent_non_personalised"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tv_privacy_agreement"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_privacy_agreement"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btn_consent_non_personalised"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_privacy_agreement"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_privacy_agreement"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tv_privacy_agreement"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>