<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCopyToken"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/btn_copy_token"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvCopyNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:text="@string/btn_copy_note"
            android:gravity="start"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="start"
            app:layout_constraintTop_toBottomOf="@+id/btnCopyToken"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPushTurnOn"
            android:layout_width="256dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_push_turn_on"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/tvCopyNote"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPushTurnOff"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_push_turn_off"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnPushTurnOn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPushDeeplinkActivity"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/btn_push_deeplink"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnPushTurnOff"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>