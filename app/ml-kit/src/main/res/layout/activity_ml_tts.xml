<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTTS"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/ml_tts"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etTTSContent"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:hint="@string/ml_tts_hint"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnTTS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPauseTTS"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/ml_tts_pause"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/etTTSContent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnResumeTTS"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/ml_tts_resume"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnPauseTTS"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>