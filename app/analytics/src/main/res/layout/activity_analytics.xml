<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".AnalyticsActivity">


        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendEvent"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:text="@string/tv_send_event"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendEventBundle"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_send_event_bundle"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnSendEvent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSendEventArraylist"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_send_event_arraylist"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnSendEventBundle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnForceCrash"
            android:layout_width="256dp"
            android:layout_height="wrap_content"
            android:text="@string/tv_force_crash"
            android:layout_marginTop="48dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/btnSendEventArraylist"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>